<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">

        <androidx.cardview.widget.CardView
                app:cardCornerRadius="10dp"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:paddingRight="10dp"
                        android:gravity="center_vertical"
                        android:id="@+id/ll_top"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:id="@+id/iv_head"
                            android:layout_margin="10dp"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@mipmap/img_mine"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <TextView
                                android:id="@+id/tv_uaername"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="立即登录"
                                android:textColor="@android:color/black"
                                android:textSize="18sp"/>

                        <TextView
                                android:id="@+id/tv_user_msg"
                                android:layout_marginTop="4dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="14sp"
                                android:text="这个人很懒哦,什么都没写.."/>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_below="@id/ll_top"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <LinearLayout
                            android:gravity="center_horizontal"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"/>

                        <TextView
                                android:layout_marginTop="2dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="收藏/历史"
                                android:textColor="@android:color/black"/>

                    </LinearLayout>
                    <LinearLayout
                            android:gravity="center_horizontal"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"/>
                        <TextView
                                android:layout_marginTop="2dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="评论/赞"
                                android:textColor="@android:color/black"/>

                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <RelativeLayout
            android:id="@+id/rl_my_jifen"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

        <ImageView
                android:id="@+id/iv_one"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/ic_jifen"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的积分"
                android:textSize="16dp"
                android:layout_centerVertical="true"
                android:textColor="@android:color/black"
                android:layout_toRightOf="@id/iv_one"
                android:layout_marginLeft="10dp"/>

        <TextView
                android:id="@+id/tv_count"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="203"
                android:textSize="14dp"
                android:layout_centerVertical="true"
                android:textColor="@android:color/black"
                android:layout_marginRight="20dp"/>

    </RelativeLayout>
    <RelativeLayout
            android:background="@color/white"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

        <ImageView
                android:id="@+id/iv_two"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/ic_version"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="版本信息"
                android:textSize="16dp"
                android:layout_centerVertical="true"
                android:textColor="@android:color/black"
                android:layout_toRightOf="@id/iv_two"
                android:layout_marginLeft="10dp"/>

        <TextView
                android:id="@+id/tv_version"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="203"
                android:textSize="14dp"
                android:layout_centerVertical="true"
                android:textColor="@android:color/black"
                android:layout_marginRight="20dp"/>

    </RelativeLayout>

    <RelativeLayout
            android:paddingRight="20dp"
            android:id="@+id/rl_cache"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

        <ImageView
                android:id="@+id/iv_three"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/ic_cache"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清除缓存"
                android:textSize="16dp"
                android:layout_centerVertical="true"
                android:textColor="@android:color/black"
                android:layout_toRightOf="@id/iv_three"
                android:layout_marginLeft="10dp"/>

        <com.robinhood.ticker.TickerView
                android:id="@+id/tv_cache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="end"
                android:textColor="#808080"
                android:textSize="13sp"
                app:ticker_animationDuration="1200" />

    </RelativeLayout>

    <TextView
            android:visibility="gone"
            android:id="@+id/tv_logout"
            android:layout_marginTop="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="退出登录"
            android:background="@color/white"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:gravity="center"
            android:padding="10dp"/>

</LinearLayout>